<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_8dp"
    android:padding="@dimen/dim_2dp"
    app:cardCornerRadius="@dimen/dimen_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_settings"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_6dp">

        <ImageView
            android:id="@+id/quicknote_image"
            android:layout_width="@dimen/dim_40dp"
            android:layout_height="@dimen/dim_40dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circular_shape_programm" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/program_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="Programm title"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_18sp" />
                <TextView
                    android:id="@+id/id_number_of_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/dim_2dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:text="8 parts"
                    android:textColor="@color/red_sci" />
            </LinearLayout>

            <TextView
                android:id="@+id/id_programm_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:minLines="2"
                android:text=" Is simply dummy text of the printing and typesetting industry. L" />


            <TextView
                android:id="@+id/id_today_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dim_2dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:text="Saturday"
                android:textColor="#4B4A4A" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>